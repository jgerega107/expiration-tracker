<article>
  <h1 class="headers">Shows Found</h1>
  <h2 class="subheaders">Search Term: {{this.term}}</h2>
  <section class="lists">
    {{#if shows}}
      <ul>
        {{#each shows}}
          <li>
            <a href="/show/{{id}}" class="show">{{name}}</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <div>
        <p class="error">We're sorry, but no results were found for
          {{this.term}}.</p>
      </div>
    {{/if}}
  </section>
</article>